<Window x:Class="ProgramExecutionCounter.detail.EntryDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detail" Height="309" Width="566" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Label Content="Registry Key:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Margin="101,14,12,0" Name="textBox1" IsReadOnlyCaretVisible="True" IsReadOnly="True" 
                 Text="{Binding Path=RegistryKey, Mode=OneWay}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="93" VerticalAlignment="Top" VerticalContentAlignment="Stretch" />
        <Label Content="Value:" Height="26" HorizontalAlignment="Left" Margin="48,113,0,0" Name="label2" VerticalAlignment="Top" Width="41" />
        <TextBox HorizontalAlignment="Stretch" Margin="101,113,12,12" Name="textBox2" VerticalAlignment="Stretch" 
                 IsReadOnlyCaretVisible="True" IsReadOnly="True"
                 Text="{Binding Path=Value, Mode=OneWay}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Stretch" FontFamily="Courier New" />
    </Grid>
</Window>
